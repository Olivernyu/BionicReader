{
  "manifest_version": 3,
  "name": "BionicReader",
  "version": "1.0",
  "description": "Convert text on a webpage to Bionic text",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "48": "icon.png",
      "128": "icon.png",
      "512": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "commands": {
    "convert_to_bionic": {
      "suggested_key": {
        "default": "Ctrl+Shift+B",
        "mac": "MacCtrl+Shift+B"
      },
      "description": "Convert to Bionic Text"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "48": "icon.png",
    "128": "icon.png",
    "512": "icon.png"
  }
}
