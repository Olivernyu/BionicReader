{
  "manifest_version": 3,
  "name": "BionicReader",
  "version": "1.0",
  "description": "Convert text on a webpage to Bionic text",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_icon": {
      "48": "icon.png",
      "128": "icon.png",
      "512": "icon.png"
    },
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "48": "icon.png",
    "128": "icon.png",
    "512": "icon.png"
  }
}
